        <script>
            var index=0;
            var imgdata=['./tc img/top_main_ph075.png','./tc img/top_main_ph076.png']
            var rright=document.getElementsByClassName("rright")[0];
var lleft=document.getElementsByClassName("lleft")[0];
var img=document.getElementById("imgs");
rright.onclick=function(){
index++;
if(index==imgdata.length) index=0;
img.setAttribute('src',imgdata[index]);
}
lleft.onclick=function(){
if(index==0) index=imgdata.length;
index--;
img.setAttribute('src',imgdata[index]);
}
        </script>
